<launch>
  <!-- if Rviz can't find map codeing: rosrun tf static_transform_publisher 0 0 0 0 0 0 map base_link 50 -->
  <arg
    name="model" />
  <param
    name="robot_description"
    textfile="$(find Kbot)/urdf/Kbot.urdf" />
  
  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="robot_state_publisher" />
    <arg 
    name="use_gui" default="true" 
    doc="Should the joint_state_publisher use a GUI for controlling joint states" />
  <node 
    pkg="joint_state_publisher" 
    type="joint_state_publisher" 
    name="joint_state_publisher" 
    output="screen" unless="$(arg use_gui)" />
  <node 
    pkg="joint_state_publisher_gui" 
    type="joint_state_publisher_gui" 
    name="joint_state_publisher_gui" 
    output="screen" if="$(arg use_gui)" />
  
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find Kbot)/urdf.rviz" 
    required="true"/>
</launch>
